{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"jsx": "react",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,
		"moduleResolution": "Node",
		"baseUrl": "src",
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}

{
  "name": "react-polybox",
  "version": "1.0.4",
  "description": "React polymorphic component",
  "keywords": [
    "react",
    "polymorphism",
    "polymorphic",
    "typescript",
    "component"
  ],
  "author": "fipnooone",
  "license": "MIT",
  "homepage": "https://github.com/fipnooone/react-polybox",
  "bugs": {
    "url": "https://github.com/fipnooone/react-polybox/issues"
  },
  "repository": {
    "type": "git",
    "url": "github:fipnooone/react-polybox"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@types/react": "^19.0.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@types/react": ">=19.0.0",
    "react": ">=19.0.0"
  },
  "scripts": {
    "build:clean": "rimraf dist",
    "build:compile": "tsc -project ./tsconfig.build.json",
    "build": "bun run build:clean && bun run build:compile",
    "format": "prettier --write .",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\"",
    "type-check": "tsc --noEmit"
  }
}

{
  "name": "react-polybox",
  "version": "1.0.4",
  "description": "React polymorphic component",
  "keywords": [
    "react",
    "polymorphism",
    "polymorphic",
    "typescript",
    "component"
  ],
  "author": "fipnooone",
  "license": "MIT",
  "homepage": "https://github.com/fipnooone/react-polybox",
  "bugs": {
    "url": "https://github.com/fipnooone/react-polybox/issues"
  },
  "repository": {
    "type": "git",
    "url": "github:fipnooone/react-polybox"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "dependencies": {
    "react-generic-functions": "^1.0.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "bun-types": "latest",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@types/react": ">=18.2.45",
    "react": ">=18.2.0"
  },
  "scripts": {
    "build:clean": "rimraf dist",
    "build:compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "build": "bun run build:clean && bun run build:compile",
    "format": "prettier --write .",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\"",
    "type-check": "tsc --noEmit"
  }
}
